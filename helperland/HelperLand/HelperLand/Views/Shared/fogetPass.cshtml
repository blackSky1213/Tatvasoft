@model HelperLand.Models.ForgetPass

<div class="modal fade" id="staticBackdrop1" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title login-title" id="staticBackdropLabe1">
                    Forget Password
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body">
                <div class="@TempData["add"]  alert-dismissible fade mb-2s" role="alert">
                    <strong>@TempData["message"] </strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <form asp-controller="Registration" asp-action="ForgetPass" method="post">
                    <div>
                        <div class="form-group inner-addon right-addon">
                            <img src="user.png" alt="" />
                            <input type="email" asp-for="email" class="form-control" placeholder="E-Mail" />

                        </div>

                        <br />
                        <input class="login-btn" type="submit" value="Send" />
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a class="forget-password-link" href="" data-bs-toggle="modal"
                       data-bs-target="#staticBackdrop" data-bs-dismiss="modal">Log in</a>

                </div>
            </div>

        </div>
    </div>
</div>

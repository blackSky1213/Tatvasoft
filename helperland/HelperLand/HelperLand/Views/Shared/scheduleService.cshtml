@model HelperLand.Models.scheduleService 
<div class="schedule-plan">
    <form asp-controller="Customer" asp-action="ScheduleService" method="post">

        <div class="selectRoomAndBath">
            <div>
                <label for="dateAndtime"> When do you need cleaner? </label>
                <div style="display: flex">
                    <div class="date-input">
                        <img src="/image/calendar.png" alt="calender" />
                        <input type="date" asp-for="Date" />
                    </div>
                    <input type="time" asp-for="time" />
                </div>
            </div>
            <div class="totalTime">
                <label for="dateAndtime"> When do you need cleaner? </label>
                <br />
                <select asp-for="Duration">
                    <option value="1">1.0 Hrs</option>
                    <option value="1">1.0 Hrs</option>
                    <option value="1">1.0 Hrs</option>
                    <option value="1">1.0 Hrs</option>
                    <option value="1">1.0 Hrs</option>
                </select>
            </div>
        </div>
        <div class="extraService-checkbox">
            <h4>Extra services</h4>
            <div id="custom-checkboxes">
                <div class="checkbox">
                    <input type="checkbox"
                           asp-for="extra.Cabinet"
                           id="insideCabinetCheck"
                           class="htmlcheckbox"
                           onclick="onInsideCabinet();" />
                    <label for="insideCabinetCheck" onclick="onInsideCabinet();">
                        <img src="/image/3.png" id="insideCabinetImg" alt="" />
                    </label>
                    <p>inside cabinets</p>
                </div>

                <div class="checkbox">
                    <input type="checkbox"
                           id="insideFridgeCheck"
                           asp-for="extra.Fridge"
                           class="htmlcheckbox"
                           onclick="onInsideFridge();" />
                    <label for="insideFridgeCheck">
                        <img src="/image/5.png"
                             id="insideFridgeImg"
                             alt=""
                             onclick="onInsideFridge();" />
                    </label>
                    <p>inside Fridge</p>
                </div>

                <div class="checkbox">
                    <input type="checkbox"
                           asp-for="extra.Oven"
                           id="insideOvenCheck"
                           class="htmlcheckbox"
                           onclick="onInsideOven();" />
                    <label for="insideOvenCheck" onclick="onInsideOven();">
                        <img src="/image/4.png" id="insideOvenImg" alt="" />
                    </label>
                    <p>inside Oven</p>
                </div>

                <div class="checkbox">
                    <input type="checkbox"
                           id="laundryCheck"
                           asp-for="extra.Laundary"
                           class="htmlcheckbox"
                           onclick="onLaundry();" />
                    <label for="laundryCheck" onclick="onLaundry();">
                        <img src="/image/2.png" id="laundryImg" alt="" />
                    </label>
                    <p>Laundry Wash & Dry</p>
                </div>

                <div class="checkbox">
                    <input type="checkbox"
                           id="interiorCheck"
                           asp-for="extra.Window"
                           class="htmlcheckbox"
                           onclick="onInterior();" />
                    <label for="interiorCheck" onclick="onInterior();">
                        <img src="/image/1.png" id="interiorImg" alt="" />
                    </label>
                    <p>interior Windows</p>
                </div>
            </div>
        </div>
        <div class="comment-box">
            <label for="comment"> Comments </label>
            <br />
            <textarea asp-for="Comments"
                      id="comment"
                      cols="30"
                      rows="10"></textarea>
            <br />
            <input type="checkbox" asp-for="havePet" value="true" />
            <label class="have-pet">I have pets at home</label>
        </div>

        @if (ViewBag.Name != null)
        {


            <div style="text-align: right;margin-top:20px">
                <input id="continue"
                       type="submit"
                       name="submit"
                       value="Continue" />
            </div>
        }
        else
        {
            <div style="text-align: right;margin-top:20px;">
                <a id="continue"
                       role="button"
                       data-bs-toggle="modal"
                       data-bs-target="#staticBackdrop" 
                        >Continue</a>
            </div>

            <div class="modal fade" id="staticBackdrop" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title login-title" id="staticBackdropLabe">
                                Login to your account
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="@TempData["add"] alert-warning alert-dismissible fade " role="alert">
                                <strong>
                                    @TempData["fail"]
                                </strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>

                            <div>
                                <div class="form-group inner-addon right-addon">
                                    <img src="user.png" alt="" />
                                    <input type="email" asp-for="username" class="form-control" placeholder="E-Mail" required />


                                </div>

                                <span asp-validation-for="username" class="text-danger"></span>
                                <div class="inner-addon right-addon">
                                    <img src="lock.png" alt="" />
                                    <input type="password" asp-for="password" class="form-control" placeholder="Password" required />

                                </div>
                                <span asp-validation-for="password" class="text-danger"></span>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="rememberMe" value="true" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Save on computer
                                    </label>
                                </div>
                                <br />
                                <input class="Login-btn" type="submit" value="Log in" />
                            </div>


                            <div class="text-center mt-3">
                                <a class="forget-password-link" id="forget" data-bs-toggle="modal"
                                   data-bs-target="#staticBackdrop1" data-bs-dismiss="modal">Forgot Password?</a>
                                <p>dont' have account? <a class="forget-password-link" asp-controller="Registration" asp-action="SignUp">create Account</a> </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


        }
    </form>
</div>
@model HelperLand.Models.ContactU
@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />




    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/contactStyle.css" />
    <link rel="stylesheet" href="/css/commonStyle.css" />
    <title>Contact</title>
</head>

<body>
    @await Html.PartialAsync("Navbar2")
    <a id="SuccessSent" class="d-none" data-bs-toggle="modal"
       data-bs-target="#staticBackdrop2" data-bs-dismiss="modal"></a>
    <section id="header" class="p-boader">
        <img class="header-img" src="/image/group-16_2.png" />
    </section>

    <section id="contact">
        <h2>Contact us</h2>
        <div class="diveder">
            <span class="line"></span><img src="/image/separator.png" alt="diveder" /><span class="line"></span>
        </div>

        <div class="contact-details container-fluid">
            <div class="row d-flex justify-content-center">
                <div class="col-sm-12 col-lg-3">
                    <img src="/image/forma_1_2.png" alt="location-icon" />
                    <p>1111 Lorem ipsum text 100,</p>
                    <p>Lorem ipsum AB</p>
                </div>
                <div class="col-sm-12 col-lg-3">
                    <img src="/image/phone-call.png" alt="call-icon" />
                    <p>+49 (40) 123 56 7890</p>
                    <p>+49 (40) 123 56 7890</p>
                </div>
                <div class="col-sm-12 col-lg-3">
                    <img src="/image/vector-smart-object.png" alt="mail-icon" />
                    <p>info@helperland.com</p>
                </div>
            </div>
        </div>
    </section>
    <hr class="section-divder">
    <section id="with-us">
        <h2>Get in touch with us</h2>
        <form asp-action="Contact" enctype="multipart/form-data" method="post">
            <div class="row g-2 d-flex justify-content-center">
                <div class="col-lg-6">
                    <input type="text"
                           class="form-control"
                           asp-for="FirstName"
                           placeholder="First name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-lg-6">
                    <input type="text"
                           class="form-control"
                           asp-for="LastName"
                           placeholder="Last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-2 d-flex justify-content-center">
                <div class="col-lg-6">
                    <div class="input-group">
                        <span class="input-group-text" style="color:#4F4F4F;" id="basic-addon1">+49</span>
                        <input type="tel"
                               class="form-control"
                               asp-for="PhoneNumber"
                               placeholder="Mobile number" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-lg-6">
                    <input type="email"
                           class="form-control"
                           asp-for="Email"
                           placeholder="Email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-2 d-flex justify-content-center">
                <div class="col-lg-12">
                    <select asp-for="Subject" class="form-select">
                        <option value="General">General</option>
                        <option value="Inquiry">Inquiry</option>
                        <option value="renewal">renewal</option>
                        <option value="revocation">revocation</option>
                    </select>
                </div>
            </div>

            <div class="row g-2 d-flex justify-content-center">
                <div class="col-lg-12">
                    <textarea asp-for="Message"
                              class="form-control"
                              cols="20"
                              rows="5"
                              placeholder="message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>
            <div id="upload-div">
                <p>Attachment</p>
                <input type="file" asp-for="AttechmentFile" id="attachment">
                <label for="attachment" id="labelattach">Upload</label>
                <span id="filename"></span>
            </div>

            <input type="submit" value="Submit" />
        </form>
    </section>

    <section id="map" style="margin:80px 0 80px 0;">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3671.697915724429!2d72.49824711475529!3d23.034861321649558!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e8352e403437b%3A0xdc9d4dae36889fb9!2sTatvaSoft!5e0!3m2!1sen!2sin!4v1640845945555!5m2!1sen!2sin" height="400" style="border:0;width:100%" allowfullscreen="" loading="lazy"></iframe>
    </section>

    <section id="newuser">
        <h3>GET OUR NEWSETTER</h3>
        <form action="#" method="post">
            <input class="newsetter"
                   type="email"
                   name="email"
                   placeholder="YOUR EMAIL" />
            <input type="submit" class="btn-submit" name="submit" value="sumit" />
        </form>
    </section>

    @await Html.PartialAsync("footer")
    @await Html.PartialAsync("ContactDone") 
    <!-- bootstrap js cdn  -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <script src="/js/contactUsScript.js">
    </script>
</body>
</html>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


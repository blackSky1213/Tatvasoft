@model HelperLand.Models.User

@{
    ViewData["Title"] = "BecomePro";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/becomeProStyle.css" />
    <link rel="stylesheet" href="/css/commonStyle.css" />
    <title>service provider</title>
</head>

<body>
    <section id="header">
       @await Html.PartialAsync("Navbar3"); 

        <form class="service-provider" asp-controller="Registration" asp-action="BecomePro" method="post">

            <h2>Register Now!</h2>
            <span class="text-danger">
                @ViewBag.message
            </span>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input type="text" asp-for="FirstName" placeholder="First name" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
            <input type="text" asp-for="LastName" placeholder="Last name" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="email" asp-for="Email" placeholder="Email Address" id="" class="form-control">
            
            <span asp-validation-for="Mobile" class="text-danger"></span>
            <div class="input-group">
                <span class="input-group-text" style="color:#4F4F4F;margin-bottom:15px" id="basic-addon1">+49</span>
                <input type="tel"
                       class="form-control"
                       asp-for="Mobile"
                       placeholder="Mobile number" />
            </div>

            <input type="hidden" asp-for="UserTypeId" value="2" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" id="password" asp-for="Password" placeholder="Password" class="form-control">
            
            <span id="re-enter-pwd-message" class="text-danger"></span>
            <input type="password" id="re-enter-password" placeholder="Confirm Password" class="form-control">

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label " for="flexCheckDefault">
                    Send me newsletters from Helperland
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                <label class="form-check-label" for="flexCheckChecked">
                    I accept <a href="#" style="color:#1FB6FF;">terms and conditions & privacy policy</a>
                </label>
            </div>

            <input id="registered" type="submit" value="Get Started &rarr;">
        </form>
        <div class="down">
            <a href="#howWork"><i class="fas fa-arrow-down border border-1  p-2"></i></a>
        </div>
    </section>

    <section id="howWork">
        <img id="icon1" src="/image/forma-1.png" alt="">
        <img id="icon2" src="/image/forma-1_2.png" alt="">
        <img id="icon3" src="/image/forma-1_3.png" alt="">
        <img id="icon4" src="/image/forma-1_4.png" alt="">
        <img id="icon5" src="/image/forma-1_5.png" alt="">
        <img id="icon6" src="/image/forma-1_6.png" alt="">
        <h2>How it works</h2>

        <div class="container">
            <div class="row d-flex justify-content-center align-items-center" style="margin-top:72px">
                <div class="col-sm-12 order-1 order-lg-1 col-lg-3  step1">
                    <h3>Register yourself</h3>
                    <p>provide your basic information to register yourselft as a service provider.</p>
                    <p><a href="#">Read more <img src="/image/shape-2.png" alt=""></a></p>
                </div>
                <div class="col-sm-12  order-lg-2 col-lg-4 ">
                    <img class="step1-img" src="/image/group_18_3.png" alt="step1">
                </div>
            </div>
            <div class="row d-flex justify-content-center align-items-center" style="margin-top:30px">
                <div class="col-sm-12 order-sm-1 col-lg-5">
                    <img class="step1-img" src="/image/group_18_2.png" alt="step1">

                </div>
                <div class="col-sm-12 order-sm-2 col-lg-6 step2">
                    <h3>Register yourself</h3>
                    <p>provide your basic information to register yourselft as a service provider.</p>
                    <p><a href="#">Read more <img src="/image/shape-2.png" alt=""></a></p>
                </div>
            </div>
            <div class="row d-flex justify-content-center align-items-center" style="margin-top:30px">
                <div class="col-sm-12 order-sm-2 col-lg-3  step1">
                    <h3>Register yourself</h3>
                    <p>provide your basic information to register yourselft as a service provider.</p>
                    <p><a href="#">Read more <img src="/image/shape-2.png" alt=""></a></p>
                </div>
                <div class="col-sm-12 order-lg-2 col-lg-4 ">
                    <img class="step1-img" src="/image/group_18_4.png" alt="step1">
                </div>
            </div>
        </div>
    </section>
    <section id="newuser">
        <h3>GET OUR NEWSETTER</h3>
        <form action="#" method="post">

            <input class="newsetter" type="email" name="email" placeholder="YOUR EMAIL"> <input type="submit"
                                                                                                class="btn-submit" name="submit" value="sumit">
        </form>


    </section>
    @await Html.PartialAsync("footer") 
    <!-- bootstrap js cdn  -->

    <script>
        window.addEventListener("scroll", () => {
            var nav = document.querySelector("nav");
            nav.classList.toggle("sticky", window.scrollY > 0);


        });
        var pwd = document.getElementById("password");
        var conf = document.getElementById("re-enter-password");
        var submit = document.getElementById("registered");
        var re_pwd_message = document.getElementById("re-enter-pwd-message");

        conf.addEventListener("change", function () {

            if (pwd.value != conf.value) {
                submit.disabled = true;
                re_pwd_message.textContent = "password not match!"
            }
            else {
                submit.disabled = false;
                re_pwd_message.style.display = "none";
            }
        });

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

</body>
</html>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
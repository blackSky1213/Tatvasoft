
@{
    ViewData["Title"] = "SignUp";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/signupStyle.css" />
    <title>Contact</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg boader">
        <a href="#" class="navbar-brand"><img src="/image/logo-small.png" /></a>
        <button class="navbar-toggler text-white"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="border: none">
                <i class="fas fa-bars"></i>
            </span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav text-center ms-auto">
                <li class="nav-item">
                    <a href="" class="button book-btn nav-link">Book now</a>
                </li>
                <li class="nav-item">
                    <a href="" class="nav-link service-btn">Prices & services</a>
                </li>
                <li class="nav-item"><a href="" class="nav-link">Warranty</a></li>
                <li class="nav-item"><a href="" class="nav-link">Blog</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="button login-btn nav-link">Login</a>
                </li>
                <li class="nav-item">
                    <a href="" class="button helper-btn nav-link">Become a Helper</a>
                </li>
            </ul>
        </div>
    </nav>


    <section id="contact">
        <h2>Create Account</h2>
        <div class="diveder">
            <span class="line"></span><img src="/image/separator.png" alt="diveder" /><span class="line"></span>
        </div>


        <section id="with-us">
            <form action="/" method="post">
                <div class="row g-2 d-flex justify-content-center">
                    <div class="col-lg-6">
                        <input type="text"
                               class="form-control"
                               name="fistname"
                               placeholder="First name" />
                    </div>
                    <div class="col-lg-6">
                        <input type="text"
                               class="form-control"
                               name="lastname"
                               placeholder="Last name" />
                    </div>
                </div>
                <div class="row g-2 d-flex justify-content-center">

                    <div class="col-lg-6">
                        <input type="email"
                               class="form-control"
                               name="email"
                               placeholder="Email address" />
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group">
                            <span class="input-group-text" style="color:#4F4F4F;" id="basic-addon1">+49</span>
                            <input type="tel"
                                   class="form-control"
                                   name="mobilenumber"
                                   placeholder="Mobile number" />
                        </div>
                    </div>
                </div>
                <div class="row g-2 d-flex justify-content-center">

                    <div class="col-lg-6">
                        <input type="password"
                               class="form-control"
                               placeholder="Password" />
                    </div>
                    <div class="col-lg-6">


                        <input type="passoword"
                               class="form-control"
                               placeholder="Re-enter Password" />

                    </div>
                </div>
                <div class="check-box"><input type="checkbox"> <label> Yes, I would like to subscribe to the Helperland GmbH newsletter with vouchers, trends, promotions and individualized offers. I can unsubscribe from the newsletter at any time in the newsletter and in my customer account.</label></div>
                <div class="check-box"><input type="checkbox"> <label> I agree with the General Terms of Helperland GmbH agree.</label></div>
                <div class="check-box"><input type="checkbox"><label> I have the data protection have taken note of the </label></div>




                <input type="submit" value="to Register" />
            </form>
            <p>Already registered? <a href="">log in now</a> </p>
        </section>





        <section id="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-lg-2"
                         style="margin: auto; text-align: center; padding-bottom: 20px">
                        <img src="/image/logo-large.png"
                             width="120px"
                             height="92px"
                             alt="logo" />
                    </div>
                    <div class="col-12 col-lg-8">
                        <ul class="footer-menu">
                            <li>HOME</li>
                            <li>ABOUT</li>
                            <li>TESTIMONIALS</li>
                            <li>FAQS</li>
                            <li>INSURANCE</li>
                            <li>POLICY</li>
                            <li>IMPRESSUM</li>
                        </ul>
                    </div>
                    <div class="col-12 col-lg-2"
                         style="text-align: center; padding-top: 5px; margin-top: 15px">
                        <a class="px-2" href="#">
                            <i style="color: white" class="fab fa-facebook-f"></i>
                        </a>
                        <a class="px-2" href="#">
                            <i style="color: white" class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>
            <hr class="section-divder"
                style="background-color: #424242; margin-top: 0;margin-bottom:20px" />
            <p class="policy">
                ©2018 Helperland. All rights reserved.
                <a href="#">Terms and Conditions</a> | <a href="#">Privacy Policy</a>
            </p>
        </section>

        <!-- bootstrap js cdn  -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>

</body>
</html>


